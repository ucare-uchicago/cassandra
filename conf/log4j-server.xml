<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
  <Appenders>
    <File name="R" fileName="/tmp/cassandra/log/cassandra.log" append="true">
      <PatternLayout pattern="%5p [%t] %d{DEFAULT} %F:%L %m%n"/>
    </File>
    <Console name="STDOUT" target="SYSTEM_OUT">
      <PatternLayout pattern="%5p [%t] %d{DEFAULT} %F:%L %m%n"/>
    </Console>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="R"/>
    </Root>
  </Loggers>
</Configuration>
